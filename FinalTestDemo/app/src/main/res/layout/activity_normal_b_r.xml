<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".createBroadcast.NormalBRActivity">
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toTopOf="@id/airplane_txt"
        app:layout_constraintLeft_toLeftOf="parent"
        android:text="Charge connection"
        android:layout_marginLeft="100dp"
        android:layout_marginBottom="30dp"
        android:textColor="#000000"
        android:textSize="17sp"
        android:id="@+id/charge_txt"/>
    <Switch
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:thumb="@drawable/custom_thumb"
        android:track="@drawable/custom_track"
        app:layout_constraintBottom_toTopOf="@id/airplane_switch"
        android:layout_marginBottom="30dp"
        app:layout_constraintLeft_toLeftOf="@id/airplane_switch"
        android:id="@+id/charge_switch"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        android:text="Airplane mode"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginLeft="100dp"
        android:textSize="17sp"
        android:textColor="#000000"
        android:id="@+id/airplane_txt"/>
    <Switch
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:thumb="@drawable/custom_thumb"
        android:track="@drawable/custom_track"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toRightOf="@id/airplane_txt"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginLeft="50dp"
        android:id="@+id/airplane_switch"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toTopOf="@id/charge_txt"
        app:layout_constraintLeft_toLeftOf="parent"
        android:textSize="17sp"
        android:text="Camera button"
        android:layout_marginLeft="100dp"
        android:layout_marginBottom="30dp"
        android:textColor="#000000"
        android:id="@+id/camera_txt"/>
    <Switch
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toTopOf="@id/charge_txt"
        app:layout_constraintLeft_toLeftOf="@id/airplane_switch"
        android:layout_marginBottom="30dp"
        android:thumb="@drawable/custom_thumb"
        android:track="@drawable/custom_track"
        android:id="@+id/camera_switch"/>

</androidx.constraintlayout.widget.ConstraintLayout>